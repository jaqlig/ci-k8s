apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: main-ingress
  namespace: default
spec:
  rules:
    - host: "{{ cluster_dns }}"
      http:
        paths:
          - path: /
            pathType: Exact
            backend:
              service:
                name: nginx-deployment
                port:
                  number: 80
          - path: /bar
            pathType: Exact
            backend:
              service:
                name: nginx-deployment
                port:
                  number: 80